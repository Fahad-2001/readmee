<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="opd_type_view_form" model="ir.ui.view">
            <field name="name">opd_type_view_form</field>
            <field name="model">opd.type</field>
            <field name="arch" type="xml">
                <form string="Type Form">
                    <sheet>
                        <group>
                            <field name="type_of_opd"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="opd_type_view_tree" model="ir.ui.view">
            <field name="name">opd_type_view_tree</field>
            <field name="model">opd.type</field>
            <field name="arch" type="xml">
                <tree string="OPD Type" editable="bottom">
                    <field name="type_of_opd"/>
                </tree>
            </field>
        </record>

        <record id="opd_type_action_id" model="ir.actions.act_window">
            <field name="name">OPD Type(s)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">opd.type</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="opd_configuration_id"
                  name="Configuration"
                  parent="rayn_opd_root_menu_id"
                  sequence="3"/>

        <menuitem id="opd_type_id_submenu"
                  name="OPD Type"
                  parent="opd_configuration_id"
                  action="opd_type_action_id"
                  sequence="2"/>

        <menuitem id="opd_expense_product_id"
                  name="OPD Product"
                  parent="opd_configuration_id"
                  action="hr_expense.hr_expense_product"
                  sequence="4"/>

    </data>
</odoo>