<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="rayn_opd_hr_security_id" model="ir.module.category">
        <field name="name">Rayn OPD Expense</field>
    </record>

    <record id="rayn_opd_admin_security_id" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="rayn_opd_hr_security_id"/>
    </record>

    <record id="rayn_opd_manager_security_id" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="rayn_opd_hr_security_id"/>
    </record>

    <record id="rayn_opd_user_security_id" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="rayn_opd_hr_security_id"/>
    </record>

    <record model="ir.rule" id="rule_hr_rayn_admin_opd">
        <field name="name">Admin (See All Records)</field>
        <field name="model_id" ref="rayn_opd.model_rayn_opd"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('rayn_opd_admin_security_id'))]"/>
    </record>

    <!--For Employee Records 7 -->
    <record model="ir.rule" id="rule_hr_rayn_manager_opd">
        <field name="name">Manager (See His/Her and Their Subordinate's OPD Record)</field>
        <field name="model_id" ref="rayn_opd.model_rayn_opd"/>
        <field name="domain_force">['|', '|',
            ('employee_id.user_id', '=', user.id),
            ('employee_id.department_id.manager_id.user_id', '=', user.id),
            ('employee_id.parent_id.user_id', '=', user.id)]
        </field>
        <field name="groups" eval="[(4, ref('rayn_opd_manager_security_id'))]"/>
    </record>

    <record model="ir.rule" id="rule_hr_rayn_expense_user_opd">
        <field name="name">User (Own OPD Expense Records)</field>
        <field name="model_id" ref="rayn_opd.model_rayn_opd"/>
        <field name="domain_force">['|', ('employee_id.user_id', '=', user.id),('employee_id.parent_id.user_id', '=', user.id)]
        </field>
        <field name="groups" eval="[(4, ref('rayn_opd_user_security_id'))]"/>
    </record>

    <record model="ir.rule" id="rule_hr_rayn_opd_read_access">
        <field name="name">Readonly when in submit state</field>
        <field name="model_id" ref="rayn_opd.model_rayn_opd"/>
        <field name="domain_force">[('state', '!=', 'Submitted')]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

</odoo>
